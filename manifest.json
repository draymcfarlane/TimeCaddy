{
  "manifest_version": 2,
  "name": "Time Management Extension",
  "version": "1.1",
  "description": "Track and limit time spent on websites with user confirmation",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}