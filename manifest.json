{
  "manifest_version": 2,
  "name": "Time Management Extension",
  "version": "1.3",
  "description": "Track and limit time spent on websites with improved prompts and live tracking",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
